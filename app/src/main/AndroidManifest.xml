<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fathurradhy.mocinemas">

    <permission
        android:name="com.example.fathurradhy.mocinemas.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.fathurradhy.mocinemas.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.SettingActivity"/>

        <receiver android:name=".widget.ImagesBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".activity.SearchActivity"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name=".utils.provider.MovieProvider"
            android:authorities="com.example.fathurradhy.mocinemas"
            android:exported="true"
            android:readPermission="com.example.fathurradhy.mocinemas.READ_DATABASE"
            android:writePermission="com.example.fathurradhy.mocinemas.WRITE_DATABASE" />

        <service
            android:name=".services.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".utils.reminder.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".utils.reminder.MovieAlarmReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>